<xml xmlns="http://www.w3.org/1999/xhtml" collection="false">
  <variables>
    <variable type="" id="max_loss">Max Loss Amount</variable>
    <variable type="" id="macd_value">MACD</variable>
    <variable type="" id="expected_profit">Expected Profit</variable>
    <variable type="" id="initial_amount">Initial Amount</variable>
    <variable type="" id="win_amount">Win Amount</variable>
    <variable type="" id="trade_result">Trade Result</variable>
  </variables>
  
  <block type="trade" id="trade_block" x="0" y="0">
    <field name="MARKET_LIST">synthetic_index</field>
    <field name="SUBMARKET_LIST">random_index</field>
    <field name="SYMBOL_LIST">R_100</field>
    <field name="TRADETYPECAT_LIST">callput</field>
    <field name="TRADETYPE_LIST">risefall</field>
    <field name="TYPE_LIST">CALL</field>
    <field name="CANDLEINTERVAL_LIST">60</field>
    <field name="TIME_MACHINE_ENABLED">FALSE</field>
    <field name="RESTARTONERROR">TRUE</field>
    
    <statement name="INITIALIZATION">
      <block type="variables_set">
        <field name="VAR" id="max_loss">Max Loss Amount</field>
        <value name="VALUE">
          <block type="math_number">
            <field name="NUM">999</field>
          </block>
        </value>
        <next>
          <block type="variables_set">
            <field name="VAR" id="expected_profit">Expected Profit</field>
            <value name="VALUE">
              <block type="math_number">
                <field name="NUM">20</field>
              </block>
            </value>
            <next>
              <block type="variables_set">
                <field name="VAR" id="win_amount">Win Amount</field>
                <value name="VALUE">
                  <block type="math_number">
                    <field name="NUM">0.35</field>
                  </block>
                </value>
                <next>
                  <block type="variables_set">
                    <field name="VAR" id="initial_amount">Initial Amount</field>
                    <value name="VALUE">
                      <block type="math_number">
                        <field name="NUM">0.35</field>
                      </block>
                    </value>
                  </block>
                </next>
              </block>
            </next>
          </block>
        </next>
      </block>
    </statement>
    
    <statement name="SUBMARKET">
      <block type="tradeOptions">
        <field name="DURATIONTYPE_LIST">t</field>
        <field name="CURRENCY_LIST">USD</field>
        <value name="DURATION">
          <block type="math_number">
            <field name="NUM">5</field>
          </block>
        </value>
        <value name="AMOUNT">
          <block type="variables_get" id="initial_amount_get">
            <field name="VAR" id="initial_amount">Initial Amount</field>
          </block>
        </value>
      </block>
    </statement>
  </block>
  
  <block type="before_purchase" id="before_purchase_block" collapsed="true" x="-3" y="500">
    <statement name="BEFOREPURCHASE_STACK">
      <block type="variables_set">
        <field name="VAR" id="macd_value">MACD</field>
        <value name="VALUE">
          <block type="macd">
            <value name="INPUT">
              <block type="ticks"></block>
            </value>
            <value name="FAST_PERIOD">
              <shadow type="math_number">
                <field name="NUM">12</field>
              </shadow>
            </value>
            <value name="SLOW_PERIOD">
              <shadow type="math_number">
                <field name="NUM">26</field>
              </shadow>
            </value>
            <value name="SIGNAL_PERIOD">
              <shadow type="math_number">
                <field name="NUM">9</field>
              </shadow>
            </value>
          </block>
        </value>
        <next>
          <block type="notify">
            <field name="NOTIFICATION_TYPE">success</field>
            <field name="NOTIFICATION_SOUND">silent</field>
            <value name="MESSAGE">
              <block type="text_join">
                <mutation items="2"></mutation>
                <value name="ADD0">
                  <block type="text">
                    <field name="TEXT">MACD Value:</field>
                  </block>
                </value>
                <value name="ADD1">
                  <block type="variables_get">
                    <field name="VAR" id="macd_value">MACD</field>
                  </block>
                </value>
              </block>
            </value>
            <next>
              <block type="controls_if">
                <value name="IF0">
                  <block type="logic_and">
                    <statement name="DO0">
                      <block type="logic_compare">
                        <field name="OP">GTE</field>
                        <value name="A">
                          <block type="variables_get">
                            <field name="VAR" id="macd_value">MACD</field>
                          </block>
                        </value>
                        <value name="B">
                          <block type="math_number">
                            <field name="NUM">-0.5</field>
                          </block>
                        </value>
                      </block>
                    </statement>
                    <statement name="DO1">
                      <block type="logic_compare">
                        <field name="OP">LTE</field>
                        <value name="A">
                          <block type="variables_get">
                            <field name="VAR" id="macd_value">MACD</field>
                          </block>
                        </value>
                        <value name="B">
                          <block type="math_number">
                            <field name="NUM">0.5</field>
                          </block>
                        </value>
                      </block>
                    </statement>
                  </block>
                </value>
                <statement name="DO0">
                  <block type="purchase">
                    <field name="PURCHASE_LIST">CALL</field>
                  </block>
                </statement>
              </block>
            </next>
          </block>
        </next>
      </block>
    </statement>
  </block>
  
  <block type="after_purchase" id="after_purchase_block" collapsed="true" x="-13" y="700">
    <statement name="AFTERPURCHASE_STACK">
      <block type="variables_set">
        <field name="VAR" id="trade_result">Trade Result</field>
        <value name="VALUE">
          <block type="trade_result">
            <field name="RESULT_LIST">profit</field>
          </block>
        </value>
      </block>
    </statement>
  </block>
</xml>
